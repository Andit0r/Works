            <Image x:Name="image" Height="100" Width="100"/>
        </StackPanel>
        <Label Content="12345 abcde абвгд"/>
        <TextBox Text="12345 abcde абвгд"/>
        <Label Content="12345 abcde абвгд"/>
        <TextBox Text="12345 abcde абвгд"/>
        <Label Content="12345 abcde абвгд"/>
        <Label Content="12345 abcde абвгд"/>

        <Button Content="12345 abcde абвгд">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="Yellow"/>
                    <Setter Property="FontSize" Value="30"/>
                </Style>
            </Button.Style>
        </Button>
        <Button Content="12345 abcde абвгд" Height="100">
            <Button.Background>
                <ImageBrush ImageSource="{StaticResource Galaxy}"/>
            </Button.Background>
