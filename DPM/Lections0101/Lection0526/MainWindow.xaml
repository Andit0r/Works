<Window x:Class="Lection0526.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lection0526"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen">
    <StackPanel x:Name="panel">
        <Button x:Name="OpenButton" Content="Open" Click="OpenButton_Click"/>
        <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click"/>
        <Button x:Name="PrintButton" Content="Print" Click="PrintButton_Click"/>
        <Button x:Name="ColorButton" Content="Color" Click="ColorButton_Click"/>
    </StackPanel>
</Window>
