<Window x:Class="ButtonAnimationV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonAnimationV2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Storyboard x:Key="TextAnimation" RepeatBehavior="2x">
            <DoubleAnimation 
                Storyboard.TargetProperty="FontSize" 
                To="28" 
                Duration="0:0:1" 
                AutoReverse="True"/>
            <DoubleAnimation 
                Storyboard.TargetProperty="Width" 
                To="200" 
                Duration="0:0:1" 
                AutoReverse="True"/>
            <DoubleAnimation 
                Storyboard.TargetProperty="Height" 
                From="40" To="80" 
                Duration="0:0:1" 
                AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Button Content="Тыкни" 
                Width="100" 
                Height="40" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="14">
            <Button.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource TextAnimation}"/>
                </EventTrigger>
            </Button.Triggers>
        </Button>
    </Grid>
</Window>
