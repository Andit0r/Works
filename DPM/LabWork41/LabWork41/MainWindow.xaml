<Window x:Class="LabWork41.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork41"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel x:Name="MenuStackPanel" Width="0" Height="435" Background="AliceBlue">
            <Button Width="150" Height="30" Margin="20 20"/>
            <Button Width="150" Height="30" Margin="20 20"/>
            <Button Width="150" Height="30" Margin="20 20"/>
        </StackPanel>
        <Button x:Name="MenuButton" Height="30" Width="30" VerticalAlignment="Top" Click="MenuButton_Click">
            <Button.Background>
                <ImageBrush ImageSource="https://webdesignprojects.spbu.ru/fall_term23/evtushenko/Hamburger_icon.svg.png"/>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
