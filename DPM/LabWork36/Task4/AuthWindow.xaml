<Window x:Class="Task4.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="Авторизация" Height="150" Width="300" MinHeight="150" MinWidth="300" 
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Логин"/>
        <TextBox x:Name="LoginTextBox"/>
        <Label Content="Пароль"/>
        <PasswordBox x:Name="passwordBox"/>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="AuthButton" Content="Войти" Click="AuthButton_Click"/>
            <Button x:Name="CancelButton" Content="Отмена" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
