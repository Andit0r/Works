<Application x:Class="Task1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Task1"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Image">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="30"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockQuestionWindow">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0 60 0 0"/>
        </Style>

        <Style TargetType="Button" x:Key="DefaultButton">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="25 40 0 0"/>
            <Setter Property="Width" Value="85"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="NoButton" TargetType="Button" BasedOn="{StaticResource DefaultButton}">
            <Setter Property="Background" Value="IndianRed"/>
        </Style>

        <Style x:Key="YesButton" TargetType="Button" BasedOn="{StaticResource DefaultButton}">
            <Setter Property="Background" Value="LightGreen"/>
        </Style>
    </Application.Resources>
</Application>
