<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="325" Width="500">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
            <Ellipse Width="100" Height="100" Canvas.Left="46" Canvas.Top="38" Fill="#FFACB1FF" Stroke="#FF26007D" StrokeThickness="3" StrokeDashArray="3 1"/>
            <Ellipse Width="100" Height="100" Canvas.Left="400" Canvas.Top="38">
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF232323"/>
                        <GradientStop Color="#FF009296" Offset="1"/>
                        <GradientStop Color="#FF00BD8D" Offset="0.571"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="100" Height="100" Canvas.Left="217" Canvas.Top="38" Stroke="Black">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA2FFAC"/>
                        <GradientStop Color="#FF43FBFF" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Width="100" Height="100" Canvas.Left="616" Canvas.Top="38">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="https://a.d-cd.net/HgAAAgN4cuA-1920.jpg"/>
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Rectangle Width="150" Height="100" Canvas.Left="105" Canvas.Top="167" Fill="#FFFFDE82" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                        <RotateTransform Angle="19.845"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Rectangle Width="150" Height="100" RadiusX="15" RadiusY="15">
                <Rectangle.RenderTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0,0.5" StartPoint="1,0.5">
                        <GradientStop Color="#FFE40092" Offset="0"/>
                        <GradientStop Color="#FF6D0086" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle Width="150" Height="100" Canvas.Left="484" Canvas.Top="167" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="-16.82"/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="https://www.monitor-ltd.ru/assets/images/ozon6.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </StackPanel>
    </StackPanel>
</Window>
