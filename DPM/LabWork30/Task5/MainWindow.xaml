<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Red"/>
        <StackPanel Orientation="Horizontal">
            <Slider x:Name="RedSlider" Minimum="0" Maximum="255" Width="500" ValueChanged="Slider_ValueChanged"/>
            <CheckBox x:Name="RedCheckBox" Checked="RGBCheckBox_Checked" Unchecked="RGBCheckBox_Checked"/>
        </StackPanel>
        <Label Content="Green"/>
        <StackPanel Orientation="Horizontal">
            <Slider x:Name="GreenSlider" Minimum="0" Maximum="255" Width="500" ValueChanged="Slider_ValueChanged"/>
            <CheckBox x:Name="GreenCheckBox" Checked="RGBCheckBox_Checked" Unchecked="RGBCheckBox_Checked"/>
        </StackPanel>
        <Label Content="Blue"/>
        <StackPanel Orientation="Horizontal">
            <Slider x:Name="BlueSlider" Minimum="0" Maximum="255" Width="500" ValueChanged="Slider_ValueChanged"/>
            <CheckBox x:Name="BlueCheckBox" Checked="RGBCheckBox_Checked" Unchecked="RGBCheckBox_Checked"/>
        </StackPanel>
    </StackPanel>
</Window>
