<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Задание 1" Height="200" Width="800">
    <StackPanel>
        <Label Content="Логин"/>
        <TextBox/>
        <Label Content="Email"/>
        <TextBox/>
        <Button x:Name="SubscribeButton" Content="Подписаться" Margin="0 10 0 0" IsEnabled="False"/>
        <CheckBox x:Name="AllowCheckBox" 
                  Content="Я согласен на получение рассылки" 
                  Margin="0 10 0 0" 
                  Checked="AllowCheckBox_Checked" 
                  Unchecked="AllowCheckBox_Checked"/>
    </StackPanel>
</Window>
