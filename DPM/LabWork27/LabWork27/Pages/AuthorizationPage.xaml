<Page x:Class="LabWork27.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label Content="Логин"/>
            <TextBox x:Name="LoginTextBox"/>
            <Label Grid.Row="1" Content="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Grid.Row="1" />
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                <Button x:Name="LoginButton" Content="Войти" Margin="5" Click="LoginButton_Click"/>
                <Button x:Name="RegistrationPageButton" Content="Зарегистрироваться" Margin="5" Click="RegistrationPageButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
