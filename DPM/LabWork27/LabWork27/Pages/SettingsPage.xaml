<Page x:Class="LabWork27.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork27.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Настройки">

    <TabControl>
        <TabItem Header="Настройки">
            <StackPanel Margin="10">
                <GroupBox Header="О программе">
                    <Label Content="Приложение с навигацией между страницами"/>
                </GroupBox>

                <GroupBox Header="Цветовая тема">
                    <StackPanel>
                        <RadioButton Content="Тёмная"/>
                        <RadioButton Content="Светлая"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Размер текста">
                    <StackPanel>
                        <RadioButton Content="Мелкий"/>
                        <RadioButton Content="Средний"/>
                        <RadioButton Content="Большой"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </TabItem>
        
        <TabItem Header="Настройки с экспандером">
            <StackPanel Margin="10">
                <Expander Header="О программе">
                    <Label Content="Приложение с навигацией между страницами"/>
                </Expander>

                <Expander Header="Цветовая тема">
                    <StackPanel>
                        <RadioButton Content="Тёмная"/>
                        <RadioButton Content="Светлая"/>
                    </StackPanel>
                </Expander>

                <Expander Header="Размер текста">
                    <StackPanel>
                        <RadioButton Content="Мелкий"/>
                        <RadioButton Content="Средний"/>
                        <RadioButton Content="Большой"/>
                    </StackPanel>
                </Expander>
            </StackPanel>
        </TabItem>

        <TabItem Header="Игры">
            <StackPanel/>
        </TabItem>
    </TabControl>
</Page>
