<UserControl x:Class="PractWork6.Counter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PractWork6"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="DecreaseButton" Content="➖" Width="50" Click="DecreaseButton_Click"/>
        <TextBox x:Name="CounterTextBox" Width="400" Text="0" 
                 TextAlignment="Center" 
                 HorizontalContentAlignment="Center" IsReadOnly="True" TextChanged="CounterTextBox_TextChanged"/>
        <Button x:Name="IncreaseButton" Content="➕" Width="50" Click="IncreaseButton_Click"/>
    </StackPanel>
</UserControl>
